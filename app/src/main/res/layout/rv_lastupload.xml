<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/layoutrippleeffect">

    <RelativeLayout
        android:layout_width="200dp"
        android:padding="5dp"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/image_shadow"
            android:layout_centerInParent="true"
            android:id="@+id/img_lastupload_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_astronaut"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/title_lastupload_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:ems="1"
            android:maxLines="2"
            android:padding="8dp"
            android:singleLine="false"
            android:textColor="@color/design_default_color_background"
            android:background="@drawable/roundbutton"
            android:backgroundTint="@color/primaryColor"
            android:text="Seishaun vwwevBuasdfdsfsfds Yrao"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/episode_lastupload_home"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/secondaryTextColor"
            android:text="EPISODE 2"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>