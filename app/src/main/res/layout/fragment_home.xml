<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:contentPadding="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="4dp"
                                android:text="@string/last_uploaded_txt"
                                android:textColor="@color/design_default_color_background"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/dash_lastup_more"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="@drawable/ripple_forrounded"
                                android:text="@string/home_see_more"
                                android:textColor="@color/design_default_color_secondary"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:background="@color/design_default_color_secondary" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">
                            <com.yarolegovich.discretescrollview.DiscreteScrollView
                                android:id="@+id/lastup_list"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:dsv_orientation="horizontal"
                                />
                            <com.facebook.shimmer.ShimmerFrameLayout
                                android:id="@+id/loading_lastup"
                                android:layout_width="match_parent"
                                app:shimmer_duration="800"
                                android:layout_height="match_parent">
                                <include layout="@layout/shimmer_horizontal"/>
                            </com.facebook.shimmer.ShimmerFrameLayout>

                        </RelativeLayout>



                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="4dp"
                                android:text="Last Package"
                                android:textColor="@color/design_default_color_background"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="@drawable/ripple_forrounded"
                                android:text="@string/home_see_more"
                                android:textColor="@color/design_default_color_secondary"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:background="@color/design_default_color_secondary" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:scrollbars="horizontal"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="50dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="2dp"
                    app:cardElevation="5dp"
                    app:contentPadding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="4dp"
                                android:text="Movies"
                                android:textColor="@color/design_default_color_background"
                                android:textSize="24sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="4dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="@drawable/ripple_forrounded"
                                android:text="@string/home_see_more"
                                android:textColor="@color/design_default_color_secondary"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginStart="4dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="4dp"
                            android:background="@color/design_default_color_secondary" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="190dp"
                            android:scrollbars="horizontal"
                            tools:layout_editor_absoluteX="8dp"
                            tools:layout_editor_absoluteY="50dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />
                <RelativeLayout
                    android:padding="10dp"
                    android:background="@color/colorPrimaryDark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/design_default_color_secondary"
                        android:textSize="12sp"
                        android:layout_centerInParent="true"
                        android:textAlignment="center"
                        android:text="@string/disclaimer"/>
                </RelativeLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</FrameLayout>