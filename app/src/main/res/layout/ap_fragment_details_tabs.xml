<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context="ml.dvnlabs.animize.fragment.tabs.animplay.details">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/aplay_details_cont"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/aplay_add_star_layout"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/layoutrippleeffect"
                    android:padding="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:id="@+id/details_img_cover"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_picture_light"/>
                    <LinearLayout
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:layout_toEndOf="@+id/details_img_cover"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <TextView
                            android:background="@drawable/round_layout"
                            android:backgroundTint="@color/blacktrans2"
                            android:id="@+id/fragment_details_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="2"
                            android:singleLine="false"
                            android:ellipsize="end"
                            android:textSize="26sp"
                            android:textColor="@color/secondaryLightColor"
                            android:text="seisheuh saasdsadhuheu asuhue ashuhueahuasdu aeuhu"/>
                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="5dp" />
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >
                                <TextView
                                    android:background="@drawable/round_layout"
                                    android:backgroundTint="@color/blacktrans2"
                                    android:id="@+id/aplay_add_star_status"
                                    android:layout_marginEnd="5dp"
                                    android:layout_centerInParent="true"
                                    android:layout_toStartOf="@+id/aplay_add_star"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="This Anime not starred!"
                                    android:textColor="@color/secondaryLightColor"/>
                                <ImageView
                                    android:id="@+id/aplay_add_star"
                                    android:foreground="@drawable/ripple_forrounded"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_alignParentEnd="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ic_add"
                                    />

                            </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>
                <!--Head of Title conpartment-->
                <androidx.cardview.widget.CardView
                    android:layout_margin="5dp"
                    android:id="@+id/video_det_comp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/layoutrippleeffect"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:contentPadding="5dp">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        >

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_toStartOf="@id/titlename_drop"
                                android:text="Synopsis"
                                android:textColor="@color/primaryLightColor"
                                android:textStyle="italic"
                                android:textSize="32sp"
                                android:maxLines="2"
                                android:singleLine="false"
                                android:ellipsize="end"/>

                            <ImageView
                                android:layout_centerInParent="true"
                                android:id="@+id/titlename_drop"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:foregroundGravity="center"
                                android:padding="5dp"
                                android:src="@drawable/ic_expand_collapse"
                                android:tint="@color/primaryLightColor" />
                        </RelativeLayout>

                        <net.cachapa.expandablelayout.ExpandableLayout
                            android:id="@+id/video_details"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:el_duration="500"
                            app:el_expanded="true"
                            app:el_parallax="1">
                            <TextView
                                android:id="@+id/synop_play"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="afhufdsasadsaauhfuas\nfsdfdsfds\ndsfsdf\n\ndsfdsf\ndsfdsfh"
                                android:textColor="@color/textOnPrimary" />

                        </net.cachapa.expandablelayout.ExpandableLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    app:cardBackgroundColor="@color/colorPrimaryDark"
                    app:contentPadding="5dp"
                    android:layout_margin="5dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/aplay_txt_idanimes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID Anim:"
                                android:textColor="@color/primaryLightColor"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/aplay_txt_idanime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_centerInParent="true"
                                android:layout_toEndOf="@id/aplay_txt_idanimes"
                                android:text="ANMsdhu1"
                                android:textColor="@color/textOnPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/aplay_txt_idsource"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ID Source:"
                                android:textColor="@color/primaryLightColor"
                                android:textSize="16sp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_centerInParent="true"
                                android:layout_toEndOf="@id/aplay_txt_idsource"
                                android:text="ANM1"
                                android:textColor="@color/textOnPrimary"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/aplay_txt_category"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/category"
                                android:textColor="@color/primaryLightColor"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/aplay_details_genres"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="2dp"
                                android:layout_centerInParent="true"
                                android:layout_toEndOf="@id/aplay_txt_category"
                                android:text="Romance,Action,Supernatural"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:textColor="@color/textOnPrimary"
                                android:textSize="14sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <FrameLayout
                    android:id="@+id/aplay_fragment_comment"
                    android:name="ml.dvnlabs.animize.fragment.mainComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:layout="@layout/fragment_comment">

                </FrameLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


    </LinearLayout>
</FrameLayout>
