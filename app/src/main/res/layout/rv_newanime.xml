<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:contentPadding="5dp"
    app:cardCornerRadius="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="5dp"
    android:foreground="@drawable/ripple_forrounded"
    android:id="@+id/rv_lastpackage_container">
    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:background="@drawable/round_layout"
            android:backgroundTint="@color/blacktrans2"
            android:id="@+id/package_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryLightColor"
            android:layout_margin="5dp"
            tools:text="Romance,Sci-fi,Slice of Life"/>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:scaleType="fitXY"
                android:layout_margin="2dp"
                android:id="@+id/package_cover"
                android:layout_width="80dp"
                android:layout_height="100dp"
                tools:src="@drawable/ic_astronaut"/>
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/package_name"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@+id/package_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:textColor="@color/design_default_color_background"
                tools:text="Seishun buta yaroutasdsadas safgusagf usafuasfg usagfusa"/>
        </RelativeLayout>
        <GridLayout
            android:background="@color/blacktrans2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:columnCount="5"
            android:orientation="vertical"
            android:elevation="5dp"
            android:rowCount="1">

            <RelativeLayout
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/ic_star">

                <TextView
                    android:id="@+id/package_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    android:textColor="@color/design_default_color_background"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="9.99" />
            </RelativeLayout>

            <TextView
                android:id="@+id/package_episode"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="14sp"
                android:textColor="@color/design_default_color_background"
                tools:text="Episode 2 of 2" />
            <TextView
                android:visibility="gone"
                android:id="@+id/package_mal"
                android:layout_margin="2dp"
                android:layout_gravity="center"
                tools:text="MAL ID:122910"
                android:textColor="@color/design_default_color_background"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </GridLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>