<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorOverPrimary">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <RelativeLayout
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_star"
                android:layout_width="40dp"
                android:layout_height="40dp">

                <TextView
                    android:id="@+id/genrepackage_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    android:text="9.99"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:background="@drawable/roundbutton"
                android:backgroundTint="@color/red"
                android:layout_width="100dp"
                android:layout_height="20dp">

                <TextView
                    android:id="@+id/package_mal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    android:text="MAL : 11021"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="-50dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <ImageView
                android:id="@+id/package_cover"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_picture"
                android:tint="@color/colorPrimaryDark" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/package_name"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:text="seishun buta ashdihsadihiashdi sadsa adasdyaro senapi wo minai de"
                android:maxLines="2"
                android:ellipsize="end"
                android:textAlignment="center"
                android:textColor="@color/design_default_color_background"
                android:textSize="22sp" />
        </RelativeLayout>

    </LinearLayout>
</FrameLayout>