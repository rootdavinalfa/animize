<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    android:layout_height="250dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="@drawable/layoutrippleeffect"
    android:id="@+id/searchpack_container"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/searchpackage_cover"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_picture_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@+id/relativeLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/searchpackage_cover">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/round_layout"
                android:backgroundTint="@color/blacktrans2">

                <TextView
                    android:id="@+id/searchpackage_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:autoSizeMaxTextSize="22sp"
                    android:autoSizeMinTextSize="16sp"
                    android:ellipsize="marquee"
                    android:maxLines="3"
                    android:textAlignment="center"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="20sp"
                    tools:text="seishun buta ashdihsadihiashdi sadsa adasdyaro senapi wo minai de" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:background="@drawable/ic_star"
                android:backgroundTint="@color/yellow">

                <TextView
                    android:id="@+id/searchpackages_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:text="9.99"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!-- <RelativeLayout
                 android:layout_width="100dp"
                 android:layout_height="20dp"
                 android:layout_alignParentEnd="true"
                 android:background="@drawable/roundbutton"
                 android:backgroundTint="@color/red">

                 <TextView
                     android:id="@+id/searchpackage_mal"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_centerInParent="true"
                     android:gravity="center"

                     android:text="MAL : 11021"
                     android:textColor="@color/design_default_color_background"
                     android:textSize="12sp"
                     android:textStyle="bold" />

             </RelativeLayout>-->

            <RelativeLayout
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundbutton"
                android:backgroundTint="@color/primaryColor">

                <TextView
                    android:id="@+id/searchpackage_episode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"

                    android:text="2 Of 12"
                    android:textColor="@color/design_default_color_background"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </RelativeLayout>
        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>