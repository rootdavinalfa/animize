<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    tools:context=".fragment.search">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Toolbar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_marginTop="2dp"
                android:id="@+id/srch_txt_edit"
                android:singleLine="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:padding="8dp"
                android:clickable="true"
                android:foreground="@drawable/ripple_forrounded"
                android:focusable="true"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/roundbutton"
                android:hint="@string/search_anime"
                android:textColor="@color/design_default_color_background"
                android:textColorHint="@color/design_default_color_secondary" />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            android:background="@color/design_default_color_secondary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:id="@+id/src_error_txt"
                android:gravity="top|center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/design_default_color_background"
                android:text=""/>
            <ImageView
                android:visibility="gone"
                android:id="@+id/error_v_srch"
                android:layout_centerInParent="true"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_astronaut"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>



    </LinearLayout>
</FrameLayout>