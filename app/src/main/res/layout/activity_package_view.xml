<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ml.dvnlabs.animize.activity.packageView">
    <com.google.android.material.appbar.AppBarLayout
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar">
        <net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout
            android:fitsSystemWindows="true"
            android:theme="@style/CustomToolbarTheme"
            android:id="@+id/pv_collapse_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <ImageView
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/layoutrippleeffect"
                android:fitsSystemWindows="true"
                android:tint="@color/blacktrans"
                android:id="@+id/toolbar_cover"
                android:src="@drawable/ic_picture"
                app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                android:minHeight="100dp" />
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/pv_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:titleTextColor="@color/primaryColor"
                app:subtitleTextColor="@color/design_default_color_background">

            </androidx.appcompat.widget.Toolbar>
        </net.opacapp.multilinecollapsingtoolbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <RelativeLayout
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.wang.avi.AVLoadingIndicatorView
            app:indicatorName="BallClipRotateIndicator"
            app:indicatorColor="@color/primaryLightColor"
            android:layout_centerInParent="true"
            android:id="@+id/packageview_loading"
            android:visibility="gone"
            android:layout_width="100dp"
            android:layout_height="100dp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:visibility="visible"
        android:id="@+id/packageview_container"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/synopsis"
                    android:textColor="@color/primaryColor"
                    android:textSize="32sp"/>
            </RelativeLayout>
            <TextView
                android:padding="5dp"
                android:id="@+id/packageview_synopsis"
                android:textColor="@color/secondaryDarkColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="afhufdsasadsa\n\n\n\n\n\nauhfuas\nfsdfdsfds\ndsfsdf\n\ndsfdsf\ndsfdsfh"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:background="@color/primaryLightColor"
                    android:id="@+id/packageview_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Romance,Supernatural"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="16sp" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:background="@color/secondaryTextColor" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <com.google.android.gms.ads.AdView
                    android:id="@+id/adView_packageView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    ads:adSize="LARGE_BANNER"
                    ads:adUnitId="ca-app-pub-2736984372955523/1668978810">
                </com.google.android.gms.ads.AdView>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="4dp"
                android:background="@color/secondaryTextColor" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/videos"
                    android:textColor="@color/secondaryTextColor"
                    android:textSize="24sp"/>
            </RelativeLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/packageview_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="@layout/playlist_view">

            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
